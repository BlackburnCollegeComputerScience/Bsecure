<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:longClickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_contacts_black_48dp"
        android:contentDescription="@string/action_contacts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/numberText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactText"
        android:textColor="@color/RoyalBlue"
        android:singleLine="false"
        android:textSize="25sp"
        android:layout_gravity="top"
        android:text="Contact"
        android:layout_weight="0.95"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toStartOf="@+id/editButton"
        android:layout_toLeftOf="@+id/editButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberText"
        android:singleLine="false"
        android:textSize="15sp"
        android:layout_gravity="top"
        android:layout_weight="0.95"
        android:layout_below="@+id/contactText"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toStartOf="@+id/editButton"
        android:text="+1-234-567-8900"
        android:layout_toLeftOf="@+id/editButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton"
        android:textSize="10sp"/>

</RelativeLayout>